Package: reportfactory
Type: Package
Title: Lightweight Infrastructure for Handling Multiple Rmarkdown Documents
Version: 0.0.6
Authors@R: c(person("Thibaut", "Jombart", role = c("aut", "cre"), email =
  "thibautjombart@gmail.com"),
